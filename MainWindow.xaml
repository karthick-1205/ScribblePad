<Window x:Class="ScribblePad.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ScribblePad"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="Transparent">
    <StackPanel>
        <Menu>
            <MenuItem Header="File">
                <MenuItem Header="Open Text" Click="OpenText_Click"/>
                <MenuItem Header="Save as Text" Click="SaveText_Click"/>
            </MenuItem>
            <MenuItem Name="Undo" Click="Undo_Click">
                <MenuItem.Icon>
                    <Image Source="..\Data\undo.png" />
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem Name="Redo" Click="Redo_Click">
                <MenuItem.Icon>
                    <Image Source="..\Data\redo.png"/>
                </MenuItem.Icon>
            </MenuItem>
        </Menu>
    </StackPanel>
</Window>
